<% include partials/header %>

<div class="ui main text container">
  <div class="ui huge header">
    <h1>
      Food Blogs
    </h1>
  </div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blog){ %>
        <div class="item">
          <div class="image">
            <img src="<%= blog.image %>" alt="image related to <%= blog.title %>">
          </div>
          <div class="content">
            <a class="header" href="/blogs/<%= blog._id %>">
              <%= blog.title %>
            </a>
            <div class="meta">
              <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
              <p>
                <% if (blog.body.length >= 101 ) { %>
                  <%- blog.body.substring(0, 100) %>...
                <% } else { %>
                  <%- blog.body %>
                <% } %>
              </p>
            </div>
            <div class="extra">
              <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                Read More <i class="right chevron icon" aria-hidden="true"></i>
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>


<% include partials/footer %>
